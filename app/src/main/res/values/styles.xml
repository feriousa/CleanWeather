<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.Montserrat" parent="android:TextAppearance">
        <item name="fontPath">@string/montserrat_regular</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TextAppearance.Montserrat.Bold" parent="android:TextAppearance">
        <item name="fontPath">@string/montserrat_bold</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

</resources>
